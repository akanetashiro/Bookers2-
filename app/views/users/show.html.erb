<%= flash[:pfupdate] %>

<%= render 'books/show', user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th>
          <%= link_to user_path do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
            </th>
        <th>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </th>
        <th><%= book.body %></th>
        <th></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>




